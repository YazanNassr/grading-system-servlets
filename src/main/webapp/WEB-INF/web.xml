<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns = "http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version = "4.0">

    <display-name>My Grading System</display-name>

    <servlet>
        <servlet-name>Authentication</servlet-name>
        <servlet-class>controller.authentication.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomePageDispatcher</servlet-name>
        <servlet-class>controller.homepage.HomePageDispatcher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreationServlet</servlet-name>
        <servlet-class>controller.admin.CreationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletionServlet</servlet-name>
        <servlet-class>controller.admin.DeletionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnrollmentManagement</servlet-name>
        <servlet-class>controller.admin.EnrollmentManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LectureInfoServlet</servlet-name>
        <servlet-class>controller.instructor.LectureInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GradeUpdater</servlet-name>
        <servlet-class>controller.instructor.GradeUpdater</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
		<jsp-file>/view/LoginPage.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>StudentHome</servlet-name>
        <jsp-file>/view/StudentHome.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>InstructorHome</servlet-name>
        <jsp-file>/view/instructor/InstructorHome.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AdminHome</servlet-name>
        <jsp-file>/view/admin/AdminHome.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AdminCreate</servlet-name>
        <jsp-file>/view/admin/CreatePage.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AdminDelete</servlet-name>
        <jsp-file>/view/admin/DeletePage.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>EnrollmentManager</servlet-name>
        <jsp-file>/view/admin/EnrollmentManagement.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>LectureInfoPage</servlet-name>
        <jsp-file>/view/instructor/LectureInfo.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>GradesUpdater</servlet-name>
        <jsp-file>/view/instructor/GradeUpdation.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Authentication</servlet-name>
        <url-pattern>/authenticate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomePageDispatcher</servlet-name>
        <url-pattern>/homePageDispatcher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreationServlet</servlet-name>
        <url-pattern>/admin/create/controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletionServlet</servlet-name>
        <url-pattern>/admin/delete/controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnrollmentManagement</servlet-name>
        <url-pattern>/admin/enrollment/controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LectureInfoServlet</servlet-name>
        <url-pattern>/instructor/lectureInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GradeUpdater</servlet-name>
        <url-pattern>/instructor/grades/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentHome</servlet-name>
        <url-pattern>/student/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InstructorHome</servlet-name>
        <url-pattern>/instructor/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminHome</servlet-name>
        <url-pattern>/admin/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminCreate</servlet-name>
        <url-pattern>/admin/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDelete</servlet-name>
        <url-pattern>/admin/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnrollmentManager</servlet-name>
        <url-pattern>/admin/enrollment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LectureInfoPage</servlet-name>
        <url-pattern>/instructor/lectureInfoPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GradesUpdater</servlet-name>
        <url-pattern>/instructor/grades/update-form</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>/view/LoginPage.jsp</welcome-file>
    </welcome-file-list>
</web-app>

